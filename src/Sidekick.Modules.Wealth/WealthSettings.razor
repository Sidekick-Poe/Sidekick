@using Sidekick.Common.Ui.Popovers
@using Sidekick.Modules.Wealth.Localization
@using Sidekick.Modules.Wealth.Settings

<Popover Placement="TooltipPlacement.Bottom"
         Class="w-80 max-h-96">
    <ActivatorContent>
        <ButtonIcon>
            <Icon Svg="@UiIcons.Settings"/>
        </ButtonIcon>
    </ActivatorContent>
    <ChildContent>
        <FormFieldset Legend="@Resources["Item_Settings"]"
                      Dense="true">
            <ItemTotalMinimumEditor/>
        </FormFieldset>

        <ClearAllData/>
    </ChildContent>
</Popover>

@inject IStringLocalizer<WealthResources> Resources
