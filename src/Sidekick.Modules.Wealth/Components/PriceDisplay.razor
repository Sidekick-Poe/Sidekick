@using Sidekick.Apis.Poe.Trade.ApiStatic
@using Sidekick.Data.Trade.Raw
<div class="flex flex-nowrap gap-0.5 items-center justify-end">
    <Heading3>@Value.ToString("0.##")</Heading3>
    @if (ChaosItem != null)
    {
        <TextBase Class="text-[#a38d6d]">&times;</TextBase>
        <Tooltip Text="@ChaosItem.Text">
            <img src="@ChaosItem.Image" class="max-h-6" alt="chaos" />
        </Tooltip>
    }
</div>

@inject IApiStaticDataProvider ApiStaticDataProvider

@code {

    [Parameter]
    public decimal Value { get; set; }

    private RawTradeStaticItem? ChaosItem => ApiStaticDataProvider.GetById("chaos");

}
