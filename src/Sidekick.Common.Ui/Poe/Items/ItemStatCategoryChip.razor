@using Sidekick.Apis.Poe.Items
<ChipCustom Class="@Class"
            OnClick="OnClick">
    <div class="flex items-center flex-nowrap gap-0.5">
        @if (ShowCheckbox)
        {
            if (Checked)
            {
                <div class="w-[14px] h-[14px] -my-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-[14px] h-[14px] fill-current">
                        <path
                            d="M19,19H5V5H15V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V11H19M7.91,10.08L6.5,11.5L11,16L21,6L19.59,4.58L11,13.17L7.91,10.08Z"/>
                    </svg>
                </div>
            }
            else
            {
                <div class="w-[14px] h-[14px] -my-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-[14px] h-[14px] fill-current">
                        <path
                            d="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,5V19H5V5H19Z"/>
                    </svg>
                </div>
            }
        }
        <span class="leading-none">@Category</span>
    </div>
</ChipCustom>

@code {

    [Parameter]
    public StatCategory? Category { get; set; }

    [Parameter]
    public bool ShowCheckbox { get; set; }

    [Parameter]
    public bool Checked { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    private string Class => Category switch
    {
        StatCategory.Crafted => "bg-[#0060bf]",
        StatCategory.Delve => "bg-[#ad631b]",
        StatCategory.Enchant => "bg-[#8b579c]",
        StatCategory.Explicit => "bg-[#26A69A]",
        StatCategory.Fractured => "bg-[#a29162]",
        StatCategory.Implicit => "bg-[#65621e]",
        StatCategory.Monster => "bg-[#8b0000]",
        StatCategory.Pseudo => "bg-[#8E24AA]",
        StatCategory.Scourge => "bg-[#ff6e25]",
        StatCategory.Veiled => "bg-[#545c63]",
        StatCategory.Crucible => "bg-[#ff7339]",
        StatCategory.Desecrated => "bg-[#8e9e52]",
        _ => "bg-gray-600",
    };

}
