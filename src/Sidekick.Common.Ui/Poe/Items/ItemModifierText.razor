@using Sidekick.Apis.Poe.Models
<TextBase Class="@($"{Class} {ColorClass} {LogbookClass} leading-none py-px font-caps")">@ChildContent</TextBase>

@code {

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; } = "text-center";

    [Parameter]
    public ModifierCategory? Category { get; set; }

    private string ColorClass => Category switch
    {
        ModifierCategory.Scourge => "text-[#FF6E25]",
        ModifierCategory.Fractured => "text-[#A29162]",
        ModifierCategory.Desecrated => "text-[#738725]",
        ModifierCategory.Enchant => "text-[#B4B4FF]",
        ModifierCategory.Rune => "text-[#B4B4FF]",
        ModifierCategory.Crafted => "text-[#B4B4FF]",
        ModifierCategory.Crucible => "text-[#FF7339]",
        ModifierCategory.Corrupted => "text-[#D20000]",
        ModifierCategory.Unidentified => "text-[#D20000]",
        ModifierCategory.WhiteText => "text-[#FFFFFF]",
        ModifierCategory.GrayText => "text-[#7F7F7F]",
        ModifierCategory.OrderOfTheChalice => "text-[#7F7F7F]",
        ModifierCategory.KnightsOfTheSun => "text-[#7F7F7F]",
        ModifierCategory.BlackScytheMercenaries => "text-[#7F7F7F]",
        ModifierCategory.DruidsOfTheBrokenCircle => "text-[#7F7F7F]",
        _ => "text-[#8888FF]",
    };

    private string LogbookClass => Category switch
    {
        ModifierCategory.OrderOfTheChalice => "item-logbook-faction item-logbook-faction-order",
        ModifierCategory.KnightsOfTheSun => "item-logbook-faction item-logbook-faction-knights",
        ModifierCategory.BlackScytheMercenaries => "item-logbook-faction item-logbook-faction-mercenaries",
        ModifierCategory.DruidsOfTheBrokenCircle => "item-logbook-faction item-logbook-faction-druids",
        _ => string.Empty,
    };

}
