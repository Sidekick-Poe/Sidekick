<TooltipRight>
    <ChildContent>
        <div class="text-violet-500 flex self-center cursor-help">
            <Icon Svg="@UiIcons.Help" />
        </div>
    </ChildContent>

    <TooltipContent>
        <TextBase Class="max-w-[15rem]">@Text</TextBase>
    </TooltipContent>
</TooltipRight>

@code {

    [Parameter]
    public required string Text { get; set; }

}
