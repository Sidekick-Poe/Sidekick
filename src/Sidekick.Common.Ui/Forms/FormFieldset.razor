<fieldset class="border border-solid dark:border-stone-800 mb-3 @(Dense ? "p-2" : "p-3") @AdditionalClasses">
    @if (Legend != null)
    {
        <legend class="font-medium leading-none tracking-tight @(Dense ? "text-lg" : "text-2xl")">@Legend</legend>
    }
    @ChildContent
</fieldset>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Legend { get; set; }

    [Parameter]
    public bool Dense { get; set; }

    [Parameter]
    public string? AdditionalClasses { get; set; }

}
