<label @onmouseenter="OnMouseEnter"
       @onmousedown="OnMouseDown"
       @onkeydown="OnKeyDown"
       @onclick:preventDefault="true"
       class="flex items-center leading-none select-none @(Dense ? "min-h-4 gap-[3px]" : "min-h-5 gap-1")">
    <input type="checkbox"
           disabled="@Readonly"
           checked="@Value"
           @onchange="OnChange"
           class="@(Dense ? "w-4 h-4 min-w-4 min-h-4" : "w-5 h-5 min-w-5 min-h-5") rounded-sm @FormInputInline.ColorClasses text-zinc-600! @(Readonly ? string.Empty : FormInputInline.TransitionClasses) @UiClasses.FocusClasses">
    <span class="text-white font-medium @(Dense ? "text-sm" : "text-base") grow">
        @ChildContent
    </span>
</label>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Value { get; set; }

    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    [Parameter]
    public bool Dense { get; set; }

    [Parameter]
    public bool Readonly { get; set; }

    private async Task OnChange(ChangeEventArgs args)
    {
        if (Readonly) return;

        if (bool.TryParse(args.Value?.ToString(), out var boolValue))
        {
            await ValueChanged.InvokeAsync(boolValue);
        }
        else
        {
            await ValueChanged.InvokeAsync(!Value);
        }
    }

    private async Task OnMouseEnter(MouseEventArgs args)
    {
        if (Readonly) return;

        if (args.Buttons == 1)
        {
            await ValueChanged.InvokeAsync(!Value);
        }
    }

    private async Task OnMouseDown(MouseEventArgs args)
    {
        if (Readonly) return;

        if (args.Buttons == 1)
        {
            await ValueChanged.InvokeAsync(!Value);
        }
    }

    private async Task OnKeyDown(KeyboardEventArgs args)
    {
        if (Readonly) return;

        if (args.Key == " ")
        {
            await ValueChanged.InvokeAsync(!Value);
        }
    }

}
