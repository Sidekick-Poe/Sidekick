<span class="relative fill-current inline-block @GetSizeClass(Size) @Class">
    @((MarkupString)Svg)
</span>

@code {
    [Parameter]
    public required string Svg { get; set; }

    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public UiIconSize Size { get; set; } = UiIconSize.Medium;

    public static string GetSizeClass(UiIconSize size) => size switch
    {
        UiIconSize.Small => "size-3 min-w-3 min-h-3",
        UiIconSize.Large => "size-12 min-w-12 min-h-12",
        _ => "size-5 min-w-5 min-h-5",
    };

}
