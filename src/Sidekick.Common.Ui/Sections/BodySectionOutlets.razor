<div class="font-sans text-base absolute top-0 left-0 right-0 bottom-0 pointer-events-none overflow-hidden *:pointer-events-auto">
    @foreach (var name in SectionService.BodySectionNames)
    {
        <SectionOutlet @key="@name"
                       SectionName="@name"/>
    }
</div>

@inject SectionService SectionService
@using Microsoft.AspNetCore.Components.Sections
@implements IDisposable

@code {

    protected override void OnInitialized()
    {
        SectionService.OnChanged += Changed;
        base.OnInitialized();
    }

    private void Changed()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        SectionService.OnChanged -= Changed;
    }

}
