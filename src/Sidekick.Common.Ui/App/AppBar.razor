<div id="sidekick-appbar" class="dark:bg-stone-950 flex items-center flex-wrap py-2 pl-4">
    <h1 class="font-medium leading-none text-lg flex align-center gap-4 select-none">
        <img src="/images/orbs/ExaltedOrb.png" alt="logo" class="w-6 h-6"/>
        <span>Sidekick@(!string.IsNullOrEmpty(CurrentView.Options?.Title) ? $" {CurrentView.Options.Title}" : "")</span>
    </h1>

    <div class="ml-auto -my-2 flex items-center flex-nowrap">
        <AppUpdate />
        <AppHome />
        @ChildContent
    </div>
</div>

@implements IDisposable
@inject ICurrentView CurrentView

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    protected override void OnInitialized()
    {
        CurrentView.ViewInitialized += CurrentViewInitialized;
        base.OnInitialized();
    }

    private void CurrentViewInitialized()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CurrentView.ViewInitialized -= CurrentViewInitialized;
    }

}
