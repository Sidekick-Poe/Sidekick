<div class="relative grid select-none items-center whitespace-nowrap rounded-lg py-0.5 px-1 font-sans text-xs font-bold uppercase text-white @Class @(OnClick.HasDelegate && !Readonly ? "duration-200 transition-opacity opacity-100 hover:opacity-75 cursor-pointer" : "")"
     @onclick="Click"
     @onclick:preventDefault="true"
     @onclick:stopPropagation="true">
    <span>@ChildContent</span>
</div>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public bool Readonly { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    private async Task Click()
    {
        if (Readonly) return;
        await OnClick.InvokeAsync();
    }

}
