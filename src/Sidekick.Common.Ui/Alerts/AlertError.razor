<div class="flex flex-nowrap items-center w-full gap-2 @BackgroundClass p-2">
    <Icon Svg="@UiIcons.Error" Size="@UiIconSize.Medium" />
    <div class="grow">
        @ChildContent
    </div>
</div>

@code {

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool IsCritical { get; set; } = true;

    private string BackgroundClass => IsCritical ? "bg-red-700 text-white" : "bg-orange-700 text-white";

}
