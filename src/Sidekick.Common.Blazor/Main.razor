<AppWrapper OnResizeChanged="OnResizeChanged">
    <Router AppAssembly="@typeof(Main).Assembly" AdditionalAssemblies="SidekickConfiguration.Modules">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" />
        </Found>
        <NotFound>
            <LayoutView>
                <LayoutSimple>
                    <TopContent>
                        <AppLogo />
                    </TopContent>

                    <ChildContent>
                        <AlertError>
                            <TextBase Class="text-center">Page not found.</TextBase>
                        </AlertError>
                    </ChildContent>
                </LayoutSimple>
            </LayoutView>
        </NotFound>
    </Router>
</AppWrapper>

@code {

    [Parameter]
    public EventCallback<(int width, int height)> OnResizeChanged { get; set; }

}
