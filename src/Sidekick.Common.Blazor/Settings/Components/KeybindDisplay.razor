@using System.Net

<span class="keybind-display">
    @((MarkupString)GetFormattedKeybind())
</span>

@code {

    [Parameter]
    public string Keybind { get; set; } = string.Empty;

    private string KbdClass => "px-2 py-1 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500";

    private MarkupString GetFormattedKeybind()
    {
        var keys = Keybind.Split('+').Select(x => $@"<kbd class=""{KbdClass}"">{WebUtility.HtmlEncode(x)}</kbd>");

        return new MarkupString(string.Join("<span> + </span>", keys));
    }

}
