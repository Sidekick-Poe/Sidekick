@using Sidekick.Apis.Poe.Items
@using Sidekick.Modules.Trade.Valuation.Localization

@if (NinjaLoaded == false && ScoutLoaded == false && PredictionLoaded == false)
{
    <AlertInfo Flat="true">@Resources["NoData"]</AlertInfo>
}

<ValuationNinjaResult AfterInitialized="v => NinjaLoaded = v"/>

@if (ScoutLoaded == true && NinjaLoaded == true)
{
    <LayoutDivider/>
}

<ValuationScoutResult AfterInitialized="v => ScoutLoaded = v"/>

@if (PredictionLoaded == true && (ScoutLoaded == true || NinjaLoaded == true))
{
    <LayoutDivider/>
}

<ValuationPredictionResult AfterInitialized="v => PredictionLoaded = v"/>

@inject IStringLocalizer<ValuationResources> Resources

@code {

    [CascadingParameter]
    public required Item Item { get; set; }

    private bool? NinjaLoaded { get; set; }

    private bool? ScoutLoaded { get; set; }

    private bool? PredictionLoaded { get; set; }

}
