@using Sidekick.Apis.Poe.Items
@using Sidekick.Apis.Poe.Trade.Parser.Pseudo.Filters
@using Sidekick.Apis.Poe.Trade.Trade.Filters

@if (PseudoFilters.Any())
{
    <ItemSeparator Rarity="Item.Header.Rarity"/>
}


@for (var index = 0; index < PseudoFilters.Count; index++)
{
    var filter = PseudoFilters[index];
    var key = $"{Item.Id}_pseudo_{index}";
    <PseudoFilterComponent @key="key" Filter="@filter"/>
}

@code {

    [CascadingParameter]
    public required Item Item { get; set; }

    [Parameter]
    public required List<PseudoFilter> PseudoFilters { get; set; }

}
