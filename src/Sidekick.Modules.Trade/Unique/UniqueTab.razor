@using Sidekick.Apis.Poe.Items
@using Sidekick.Apis.Poe2Scout.Items
@using Sidekick.Apis.PoeNinja.Items
@using Sidekick.Modules.Trade.Unique.Localization
@using Sidekick.Common.Ui.Tabs

@if (Valid)
{
    <TabItem Active="@(CurrentTab == "unique")"
             Text="@Resources["UniquePrice"]"
             OnClick="@(() => CurrentTabChanged.InvokeAsync("unique"))"/>
}

@inject IStringLocalizer<UniqueResources> Resources
@inject IScoutItemProvider ScoutItemProvider
@inject INinjaItemProvider NinjaItemProvider

@code {

    [CascadingParameter]
    public required Item Item { get; set; }

    [Parameter]
    public string? CurrentTab { get; set; }

    [Parameter]
    public EventCallback<string?> CurrentTabChanged { get; set; }

    private bool Valid { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Item.Properties.Rarity == Rarity.Unique)
        {
            List<Task<bool>> tasks =
            [
                CheckNinja(),
                CheckScout(),
            ];

            var result = await Task.WhenAll(tasks);
            Valid = result.Any(x => x);
            if (Valid) await CurrentTabChanged.InvokeAsync("unique");
        }

        await base.OnInitializedAsync();
    }

    private Task<bool> CheckNinja()
    {
        var ninjaItem = NinjaItemProvider.GetPage(Item.ApiInformation.InvariantName);
        return Task.FromResult(ninjaItem?.SupportsStash ?? false);
    }

    private async Task<bool> CheckScout()
    {
        var scoutItem = await ScoutItemProvider.GetItem(Item.ApiInformation.InvariantName);
        return scoutItem != null;
    }

}