@using Sidekick.Apis.Poe.Items
@using Sidekick.Apis.PoeNinja.Items
@using Sidekick.Modules.Trade.Insight.Localization
@using Sidekick.Common.Ui.Tabs

@if (Valid)
{
    <TabItem Active="@(CurrentTab == "insight")"
             Text="@Resources["Insight"]"
             OnClick="@(() => CurrentTabChanged.InvokeAsync("insight"))"/>
}

@inject IStringLocalizer<BaseTypeResources> Resources
@inject INinjaItemProvider NinjaItemProvider

@code {

    [CascadingParameter]
    public required Item Item { get; set; }

    [Parameter]
    public string? CurrentTab { get; set; }

    [Parameter]
    public EventCallback<string?> CurrentTabChanged { get; set; }

    private bool Valid { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Item.Properties.Rarity != Rarity.Unique)
        {
            Valid = CheckNinja();
            if (Valid) await CurrentTabChanged.InvokeAsync("insight");
        }

        await base.OnInitializedAsync();
    }

    private bool CheckNinja()
    {
        return NinjaItemProvider.GetStashItem(Item) != null;
    }

}