@using Sidekick.Common.Game.Items
@using Sidekick.Common.Settings

@if (PriceCheckService.PseudoFilters.Any())
{
    <ItemSeparator Rarity="PriceCheckService.Item?.Header.Rarity ?? Rarity.Unknown"/>
}

@foreach (var filter in PriceCheckService.PseudoFilters)
{
    <CascadingValue Value="filter" IsFixed="true">
        <PseudoFilterComponent/>
    </CascadingValue>
}

@inject PriceCheckService PriceCheckService
