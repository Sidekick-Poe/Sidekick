@if (Filters.Count > 0)
{
    for (var i = 0; i < Filters.Count; i++)
    {
        <ModifierFilterComponent Filter="Filters[i]" />

        if (i + 1 < Filters.Count && Filters[i].Line.Modifier?.Category != Filters[i + 1].Line.Modifier?.Category)
        {
            <ItemSeparator Rarity="Rarity" />
        }
    }
}

@code {
    [Parameter] public List<ModifierFilter> Filters { get; set; }
    [Parameter] public Rarity Rarity { get; set; }
}
