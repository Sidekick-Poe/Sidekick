@using Sidekick.Apis.Poe.Trade.Results
@using Sidekick.Common.Game.Languages

<div class="text-center text-[#7f7f7f]">
    @if (Result.Item.ItemLevel > 0)
    {
        <ItemPropertyText Label="@GameLanguageProvider.Language.DescriptionItemLevel" Value="@Result.Item.ItemLevel.ToString()" Class="text-center justify-center"/>
    }
</div>

@inject IGameLanguageProvider GameLanguageProvider

@code {

    [Parameter]
    public required TradeResult Result { get; set; }

    protected override bool ShouldRender() => false;

}
