@using Sidekick.Common.Blazor.Settings
@using Sidekick.Common.Settings

<FormCheckbox Value="@Enabled"
              ValueChanged="@ValueChanged">
    @Resources["PriceCheck_Automatically_Search_Currency"]
</FormCheckbox>

@inject IStringLocalizer<SettingsResources> Resources
@inject ISettingsService SettingsService

@code {

    private bool Enabled { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Enabled = await SettingsService.GetBool(SettingKeys.PriceCheckAutomaticallySearchCurrency);
        await base.OnInitializedAsync();
    }

    private async Task ValueChanged(bool value)
    {
        Enabled = value;
        await SettingsService.Set(SettingKeys.PriceCheckAutomaticallySearchCurrency, value);
    }

}
