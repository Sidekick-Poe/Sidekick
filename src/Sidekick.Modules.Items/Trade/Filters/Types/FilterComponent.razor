@using Sidekick.Apis.Poe.Items
@using Sidekick.Apis.Poe.Trade.Parser.Properties.Definitions
@using Sidekick.Apis.Poe.Trade.Trade.Filters.Types

@switch (Filter)
{
    case IntPropertyFilter intFilter:
        <IntPropertyFilterComponent Filter="intFilter"/>
        break;

    case WeaponDamageFilter weaponDamageFilter:
        <WeaponDamagePropertyFilterComponent Filter="weaponDamageFilter"/>
        break;

    case DoublePropertyFilter doubleFilter:
        <DoublePropertyFilterComponent Filter="doubleFilter"/>
        break;

    case TriStatePropertyFilter triStateFilter:
        <TriStatePropertyFilterComponent Filter="triStateFilter"/>
        break;

    case StringPropertyFilter stringFilter:
        <StringPropertyFilterComponent Filter="stringFilter"/>
        break;

    case ExpandableFilter expandableFilter:
        <ExpandableFilterComponent Filter="expandableFilter"/>
        break;

    case ItemClassFilter classFilter:
        <ItemClassPropertyFilterComponent Filter="classFilter"/>
        break;

    case OptionFilter optionFilter:
        <OptionFilterComponent Filter="optionFilter"/>
        break;

    case StatFilter statFilter:
        <StatFilterComponent Filter="statFilter"/>
        break;

    case PseudoFilter pseudoFilter:
        <PseudoFilterComponent Filter="pseudoFilter"/>
        break;

    case SeparatorFilter:
        <ItemSeparator Rarity="Item.Properties.Rarity"/>
        break;

    case HiddenFilter:
        break;

    default:
        <BooleanFilterComponent Filter="Filter"/>
        break;
}

@code {

    [CascadingParameter]
    public required Item Item { get; set; }

    [Parameter]
    public required TradeFilter Filter { get; set; }

}
