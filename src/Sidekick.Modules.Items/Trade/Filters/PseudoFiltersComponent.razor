@using Sidekick.Apis.Poe.Items
@using Sidekick.Apis.Poe.Trade.Trade.Filters.Definitions

@if (Filters.Any())
{
    <ItemSeparator Rarity="Item.Properties.Rarity"/>
}


@for (var index = 0; index < Filters.Count; index++)
{
    var filter = Filters[index];
    var key = $"{Item.Id}_pseudo_{index}";
    <PseudoFilterComponent @key="key" Filter="@filter"/>
}

@code {

    [CascadingParameter]
    public required Item Item { get; set; }

    [Parameter]
    public required List<PseudoFilter> Filters { get; set; }

}
