@using Sidekick.Apis.Poe.Trade
@using Sidekick.Apis.Poe.Trade.Leagues
@using Sidekick.Common.Settings

<TextCaption Class="text-teal-500">@Text</TextCaption>

@inject ISettingsService SettingsService
@inject ILeagueProvider LeagueProvider

@code {

    private string? Text { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var leagues = await LeagueProvider.GetList(true);
        var leagueId = await SettingsService.GetString(SettingKeys.LeagueId);
        Text = leagues.FirstOrDefault(x => x.Id == leagueId)?.Text;

        await base.OnInitializedAsync();
    }

}
